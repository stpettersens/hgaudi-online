{
	"preamble": {
	
		"source": "HGaudiApp",
		"target": "hgaudi.n",
		"cc": "haxe"
	},

	"build": [

		{ "echo": "Compiling hackedGaudi for Neko VM..." },
		{ "exec": "haxe -cp src -main HGaudiApp -neko hgaudi.n" }
	],
	
	"clean": [

		{ "echo": "Remove hackedGaudi Neko bytecode..."},
		{ "erase": "hgaudi.n" }
	]
}
